<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailField"
            android:hint="Email"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="98dp" android:layout_marginStart="98dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:layout_marginRight="100dp" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/IDLogo"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordField"
            android:hint="Password" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="97dp"
            android:layout_marginStart="97dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="101dp"
            android:layout_marginRight="101dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/emailField"/>
    <Button
            android:text="@string/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/IdConnectButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="152dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordField"
    />
    <ImageView
            android:layout_width="424dp"
            android:layout_height="119dp" app:srcCompat="@drawable/nourr"
            android:id="@+id/IDLogo" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintVertical_chainStyle="spread_inside"/>
    <Button
            android:text="S'inscrire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/IdInscription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="33dp" app:layout_constraintTop_toBottomOf="@+id/IdConnectButton"/>
</android.support.constraint.ConstraintLayout>